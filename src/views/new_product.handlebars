<form id="formProduct">
  <h2 class="formTitle">Formulario para agregar o eliminar productos</h2>
 
  <input
    class="controls"
    type="text"
    name="title"
    id="title"
    placeholder="Ingrese Nombre del Producto"
    required
  />
  <input
    class="controls"
    type="text"
    name="description"
    id="description"
    placeholder="Ingrese description"
    required
  />
  <input
    class="controls"
    type="number"
    name="stock"
    id="stock"
    placeholder="Ingrese su stock"
    required
  />
  <input
    class="controls"
    type="text"
    name="image"
    id="image"
    placeholder="Ingrese su imagen url"
    required
  />
  <input
    class="controls"
    type="text"
    name="category"
    id="category"
    placeholder="Ingrese categoria"
    required
  />
  <input
    class="controls"
    type="number"
    name="price"
    id="price"
    placeholder="Ingrese su precio"
    required
  />
  <input
    class="controls"
    type="text"
    name="code"
    id="code"
    placeholder="Ingrese su code"
    required
  />
  <button class="botons" type="submit" id="add-btn">AÃ±adir producto</button>
  <h2> Para eliminar un producto:</h2>
  <input
    class="controls"
    type="text"
    name="delete-id"
    id="delete-id"
    placeholder="Ingrese ID"
    
  />
  <button class="botons" type="button" id="delete-btn">Eliminar</button>

</form>
